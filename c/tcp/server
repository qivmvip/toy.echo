#!/bin/bash

# 2022-06-18

shfile=$0
shdir=$(realpath "$(dirname "${shfile}")")
cwd=$shdir

echo "shfile =>  $0"
echo "shdir  =>  ${shdir}"
echo "cwd    =>  ${cwd}"

i=1; for arg in "$@"; do
  echo "arg[${i}] =>  ${arg}"
  i=$((i + 1))
done

bin=${cwd}/bin/$(uname)
exe=${bin}/echo_c_tcp_server

if [ -n "$1" ]; then
  ${exe} "$1"
else
  addr="localhost"
  ${exe} "${addr}"
fi
